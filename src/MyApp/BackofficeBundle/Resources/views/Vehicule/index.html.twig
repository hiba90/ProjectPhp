{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Vehicule list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Matricule</th>
                <th>Marque</th>
                <th>Capacite</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('vehicule_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.matricule }}</td>
                <td>{{ entity.marque }}</td>
                <td>{{ entity.capacite }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('vehicule_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('vehicule_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('vehicule_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
